#include <stdio.h>


int main(){
    
 float raio, comprimento, diametro,area;
 
 const float PI=3.14159;
 
   
    printf("Digite o valor do raio da circunferência: ");
    scanf("%f", &raio);

  diametro = 2 * raio;
  comprimento= 2 * PI * raio;
  area= PI* (raio * raio);
  

  printf("O diâmetro é: %.2f \n ", diametro);
  printf("A área é: %.2f \n ", area);
  printf("O comprimento é: %.2f \n", comprimento);
 
}
